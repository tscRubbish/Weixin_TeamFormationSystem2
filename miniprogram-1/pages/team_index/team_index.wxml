<van-tabs active="{{ tab_active }}" bind:change="tab_onChange">
  <van-tab title="我的队伍">
    <van-cell-group>
      <van-cell
      wx:for="{{match_array}}"
      wx:key="id"
      title="{{item.Tname}}" 
      value="{{item.Num_now}}/{{item.Num_all}}"
      size="large" 
      label="{{item.match_name}}"
      is-link
      link-type="navigateTo"
      url="/pages/Team_details/Team_details?TID={{item.TID}}&Tname={{item.Tname}}&match_name={{item.match_name}}&Timg_path={{item.Timg_path}}&notice={{item.notice}}&memberID_array={{item.memberID_array}}&memberName_array={{item.memberName_array}}&Num_now={{item.Num_now}}"
      center
      />
    </van-cell-group>
  </van-tab>

  <van-tab title="发起组队">
    <van-cell-group>
    <van-field
    model:value="{{ new_Tname }}"
    placeholder="请输入队伍名称"
    clearable
    label="队伍名称"
    input-align="right"
    />
    </van-cell-group>
    <van-cell title="队伍人数">
      <view slot="">
        <van-stepper
        value="{{ 1 }}" 
        bind:change="Num_Change" 
        label="队伍人数"
        min="1" 
        max="1000"
        />
      </view>
    </van-cell>
    <van-cell title="选择比赛" value="{{choose_match}}" bind:click="showPopup" center>
    </van-cell>
    <van-popup show="{{ show }}" bind:close="onClose" position="bottom" round="true">
      <view slot="">
        <van-picker columns="{{ matchs }}" bind:change="match_Change" /> 
      </view>
    </van-popup>
    <van-cell-group>
  
    <van-cell title="队伍头像" center>
      <view slot=""> 
      <van-uploader file-list="{{ fileList }}" bind:after-read="afterRead" />
      </view>
    </van-cell>
    <van-field
    model:value="{{ introduction }}"
    label="队伍简介"
    type="textarea"
    placeholder=""
    autosize
    maxlength="115"
    show-word-limit="true"
    />
  </van-cell-group>
  <van-button type="default" size="large" icon="plus">发起组队</van-button>
    
    
    
  </van-tab>
  
  <van-tab title="加入队伍">
    <van-cell-group>
      <van-field
      model:value="{{ TID }}"
      clearable
      label="队伍TID"
      placeholder="请输入队伍TID"
      />
      <van-field
      value="{{ Tpassword }}"
      type="password"
      label="队伍密码"
      placeholder="请输入队伍密码"
      />
    </van-cell-group>
    <van-button type="default" size="large" icon="plus" bind:click="join_team">加入队伍</van-button>
  </van-tab>
</van-tabs>


<van-tabbar active="{{ tabber }}" bind:change="onTabberChange">
  <van-tabbar-item name="index" icon="home-o">首页</van-tabbar-item>
  <van-tabbar-item name="contestsList" icon="search">比赛</van-tabbar-item>
  <van-tabbar-item name="team_index" icon="friends-o">组队</van-tabbar-item>
  <van-tabbar-item name="mine" icon="setting-o">我的</van-tabbar-item>
</van-tabbar>