<van-tabbar active="{{ tabber }}" bind:change="onTabberChange">
  <van-tabbar-item name="index" icon="home-o">主页</van-tabbar-item>
  <van-tabbar-item name="contestsList" icon="search">比赛</van-tabbar-item>
  <van-tabbar-item name="team_index" icon="friends-o">组队</van-tabbar-item>
  <van-tabbar-item name="mine" icon="setting-o">我的</van-tabbar-item>
</van-tabbar>

<div class="name">
  <van-image id="image"
    round
    fit="cover"
    width="150rpx"
    height="150rpx"
    src="https://img.yzcdn.cn/vant/cat.jpeg"
  />
</div>

<div class="name">
  <view class="id"> ID：{{id}} </view>
  <view class="id"> 用户名：{{name}} </view>
</div>

<van-cell-group>
  <van-field
    value="{{words}}"
    label="介绍"
    readonly
    input-align="right"
    title-width="75rpx"
    type="textarea"
    autosize="true"
  />
</van-cell-group>

<van-toast id="van-toast" />

<van-grid column-num="2" border="{{ false }}">
  <van-grid-item use-slot>
    <van-icon name="{{likesType}}" bindtap="onLikesChange" data-type="{{likesType}}" />
    <text>点赞</text>
    <text>{{likes}}</text>
  </van-grid-item>
  <van-grid-item use-slot>
    <van-icon name="{{scoreType}}" bindtap="onScoreChange" data-type="{{scoreType}}" />
    <text>评价</text>
    <text>{{score}}</text>
  </van-grid-item>
  
</van-grid>

