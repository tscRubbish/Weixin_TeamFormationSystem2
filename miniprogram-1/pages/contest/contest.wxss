/* pages/contest/contest.wxss */
image {
  width: 100%;
  height: 100%;
}

.indexContainer {
  padding: 20rpx;
  box-shadow: inset 0 0 10rpx #777777;
  border: 10rpx solid
}

.tags {
  padding: 10rpx;
  box-shadow: inset 0 0 10rpx #777777;
  border-top: 5rpx solid;
  border-bottom: 5rpx solid;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.tag {
  margin: 10rpx
}

.header .title {
  font-size: 35rpx;
  line-height: 80rpx;
  color: #666;
  margin-left: 30rpx;
}

.header {
  margin-top: 10rpx;
}

.infoContainer {
  margin-top: 20rpx;
  padding: 20rpx;
  /*box-shadow: inset 0 0 10rpx #777777;
  border:10rpx solid;*/
}

.infomation {
  font-size: 30rpx;
  color: #969799;
  font-size: 13px;
  line-height: 1.5;
  padding: 5px;
}

.start {
  margin-top: 20rpx;
  float: right;
}

/**解决换行问题**/
text {
  width: fit-content;
  height: fit-content;
  word-break: keep-all;
  word-wrap: break-word;
  overflow: hidden;
  margin-right: 5rpx;
}
.back{
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: -1;
  /* opacity:0.2; */
}
.van-cell{
  opacity: 0.7 !important;
}